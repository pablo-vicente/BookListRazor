@page
@model BookListRazor.Pages.BookList.CreateModel
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Crete New Book </h2>
<br />

<div class="table-bordered">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="container" style="padding:30px;">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Book.Name"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Book.Name" class="form-control" />
                </div>
                <span asp-validation-for="Book.Name" class="text-danger"></span> 
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Book.Autor"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Book.Autor" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2">
                    <label asp-for="Book.ISBN"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Book.ISBN" class="form-control" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-2 col-lg-offset-2">
                    <input type="submit" value="Create" class="btn btn-primary form-control"/>
                </div>
                <div class="col-sm-2">
                    <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>
</div>


